{
  "compilerOptions": {
    "baseUrl": ".",
    "strict": true,
    "allowJs": true,
    "jsx": "preserve",
    "target": "esnext",
    "lib": ["dom", "es2017"],
    "noEmit": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "resolveJsonModule": true,
    "skipLibCheck": true
  },
  "exclude": ["node_modules"],
  "include": ["**/*.ts", "**/*.tsx"]
}
