{
  "name": "oskt.us",
  "version": "1.0.0",
  "main": "index.js",
  "repository": {},
  "license": "MIT",
  "scripts": {
    "start": "npm-run-all --parallel watch watch:md",
    "watch": "budo index.js -P -l -d ./public -- -v -d -p [ css-extract -o ./public/index.css ]",
    "watch:md": "gulp --gulpfile task/md.js watch --silent",
    "build": "browserify index.js -v -p [ css-extract -o ./public/index.css ] -o ./public/index.js && gulp --gulpfile task/md.js build",
    "clean": "del ./public/* !./public/index.html",
    "test": "standard && stylelint view/**/*.css",
    "fmt": "standard --fix"
  },
  "devDependencies": {
    "babel-preset-env": "^1.3.2",
    "babelify": "^7.3.0",
    "browserify": "^14.4.0",
    "budo": "^9.4.7",
    "css-extract": "^1.2.0",
    "cssnano": "^3.10.0",
    "del-cli": "^0.2.1",
    "exorcist": "^0.4.0",
    "gulp": "^3.9.1",
    "gulp-marked": "^1.0.0",
    "highlight.js": "^9.10.0",
    "npm-run-all": "^4.0.2",
    "postcss-cssnext": "^2.10.0",
    "postcss-import": "^9.1.0",
    "postcss-url": "^6.0.3",
    "sheetify-postcss": "^1.1.0",
    "standard": "^10.0.0",
    "stylelint": "^7.10.1",
    "stylelint-config-standard": "^16.0.0",
    "stylelint-csstree-validator": "^1.1.1",
    "uglifyify": "^3.0.4",
    "yo-yoify": "^3.7.0"
  },
  "dependencies": {
    "choo": "^6",
    "choo-log": "^7.2.1",
    "domify": "^1.4.0",
    "font-awesome": "^4.7.0",
    "github-markdown-css": "^2.8.0",
    "normalize.css": "^7.0.0",
    "on-load": "^3.2.0",
    "scopedify": "^1.1.1"
  },
  "browserify": {
    "transform": [
      [
        "scopedify/transform",
        {
          "use": [
            [
              "sheetify-postcss",
              {
                "plugins": [
                  [
                    "postcss-url",
                    {
                      "url": "copy",
                      "assetsPath": "assets",
                      "useHash": true
                    }
                  ],
                  "postcss-import",
                  [
                    "postcss-cssnext",
                    {
                      "browsers": [
                        "> 1%"
                      ]
                    }
                  ]
                ],
                "to": "public/index.css",
                "map": {
                  "inline": true
                }
              }
            ]
          ]
        }
      ],
      "yo-yoify",
      "babelify"
    ]
  }
}
